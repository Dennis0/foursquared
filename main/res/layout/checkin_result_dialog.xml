<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkin_result"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_below="@+id/dialog_title"
>
    <TextView
        android:id="@+id/score_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/black_end"
        android:background="@drawable/lgrey_gradient" />
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/black_gradient"
        android:layout_weight="1"
    >
        <TextView
            android:id="@+id/totals"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textAppearance="@style/TextStyleWhite" />
        <ImageView
            android:id="@+id/crown"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dip"
            android:layout_below="@id/totals"
            android:gravity="center_vertical"
            android:src="@drawable/crown"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/mayor_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/totals"
            android:layout_toRightOf="@id/crown"
            android:gravity="center"
            android:textSize="14sp"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:visibility="invisible"
            android:textAppearance="@style/TextStyleWhite" />
    </RelativeLayout>
    <ListView
        android:id="@+id/result_list"
        android:layout_below="@id/score_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer" />
</RelativeLayout>