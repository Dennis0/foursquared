<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" >
  
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dip"
    android:layout_marginBottom="6dip" >
  
    <LinearLayout
     android:layout_width="0dip"
     android:layout_height="wrap_content"
     android:layout_weight="1"
  	 android:orientation="vertical" >
	
      <TextView
        android:id="@+id/internal_venueName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_end"
        android:textAppearance="@android:style/TextAppearance.Medium" />
      <TextView
        android:id="@+id/internal_venueLocationLine1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_end"
        android:textAppearance="@android:style/TextAppearance.Small" />
      <TextView
        android:id="@+id/internal_venueLocationLine2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_end"
        android:textAppearance="@android:style/TextAppearance.Small" />
        
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  	    android:orientation="horizontal" >
        <LinearLayout
          android:layout_width="0dip"
          android:layout_height="wrap_content"
  	      android:layout_weight="1" />
        <Button
          android:id="@+id/internal_checkinButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:enabled="false"
          android:visibility="gone" 
          android:layout_alignParentRight="true"
          style="@style/venueQuickCheckinStyle" />
      </LinearLayout>
      
    </LinearLayout>
  
  </LinearLayout>
  
  
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right" >
    
    <ImageView
      android:id="@+id/internal_specialImageView"
      android:layout_width="80dip"
      android:layout_height="53dip"
      android:src="@drawable/special_banners"
      android:scaleType="fitCenter" 
      android:visibility="gone"
      />
      
  </LinearLayout>

</FrameLayout>
    